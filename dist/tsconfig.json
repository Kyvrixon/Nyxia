{
    "compilerOptions": {
        "baseUrl": ".", // Root of your project
        "paths": {
            "#/*": ["*"],
            "#pkg": ["./package.json"],
            "#bot": ["./src/bot.js"],
            "#assets/*": ["./src/assets/*"],
            "#cmd/*": ["./src/commands/*"],
            "#events/*": ["./src/events/*"],
            "#models/*": ["./src/models/*"],
            "#modules/*": ["./src/modules/*"],
            "#utils/*": ["./src/utils/*"]
        },
        "moduleResolution": "node",
        "strict": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true, // Allow JavaScript files
        "checkJs": false, // Enable type checking in JavaScript files
        "target": "ESNext", // Adjust this based on your desired output version
        "outDir": "./dist" // Output directory for compiled files
    },
    "include": [
        "src/**/*",
        "types/**/*",
        "tsconfig.json"
    ],
    "exclude": [
        "node_modules"
    ]
}
