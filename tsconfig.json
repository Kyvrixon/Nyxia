{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/*": ["*"],
      "#pkg": ["./package.json"],
      "#bot": ["./src/bot.js"],
      "#assets/*": ["./src/assets/*"],
      "#cmd/*": ["./src/commands/*"],
      "#events/*": ["./src/events/*"],
      "#models/*": ["./src/models/*"],
      "#modules/*": ["./src/modules/*"],
      "#utils/*": ["./src/utils/*"]
    },
    "moduleResolution": "node",
    "strict": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
